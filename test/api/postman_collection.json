{
  "info": {
    "name": "Rust Tutorial Auth API",
    "description": "Postman collection for testing the Actix-Web authentication endpoints. Adjust variables to match your .env (HOST/PORT).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/",
              "protocol": "{{scheme}}",
              "host": [
                "{{host}}"
              ],
              "port": "{{port}}",
              "path": [
                ""
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Body contains greeting\", function () {",
                  "    pm.expect(pm.response.text()).to.include(\"Hello\");",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"demo_user\",\n    \"password\": \"demo_password\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/login",
              "protocol": "{{scheme}}",
              "host": [
                "{{host}}"
              ],
              "port": "{{port}}",
              "path": [
                "login"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200 or 401\", function () {",
                  "    pm.expect([200, 401]).to.include(pm.response.code);",
                  "});",
                  "",
                  "pm.test(\"Response body present\", function () {",
                  "    pm.expect(pm.response.text()).to.not.be.empty;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"demo_user\",\n    \"password\": \"demo_password\",\n    \"email\": \"demo@example.com\",\n    \"phone\": \"0123456789\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/register",
              "protocol": "{{scheme}}",
              "host": [
                "{{host}}"
              ],
              "port": "{{port}}",
              "path": [
                "register"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response body present\", function () {",
                  "    pm.expect(pm.response.text()).to.not.be.empty;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "scheme",
      "value": "http"
    },
    {
      "key": "host",
      "value": "127.0.0.1"
    },
    {
      "key": "port",
      "value": "8080"
    }
  ]
}
