{
  "info": {
    "name": "Rust Tutorial Auth API",
    "description": "Postman collection for testing the Actix-Web authentication endpoints. Adjust variables to match your .env (HOST/PORT).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "description": "Health check endpoint group",
      "item": [
        {
          "name": "GET /",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/",
              "protocol": "{{scheme}}",
              "host": [
                "{{host}}"
              ],
              "port": "{{port}}",
              "path": [
                ""
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Body contains greeting\", function () {",
                  "    pm.expect(pm.response.text()).to.include(\"Hello\");",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Auth",
      "description": "Authentication endpoints (login/register)",
      "item": [
        {
          "name": "POST /api/v1/auth/login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"demo_user\",\n    \"password\": \"DemoPass1\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/v1/auth/login",
              "protocol": "{{scheme}}",
              "host": [
                "{{host}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "v1",
                "auth",
                "login"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200 or 401\", function () {",
                  "    pm.expect([200, 401]).to.include(pm.response.code);",
                  "});",
                  "",
                  "pm.test(\"Response body present\", function () {",
                  "    pm.expect(pm.response.text()).to.not.be.empty;",
                  "});",
                  "",
                  "// Capture token on successful login for reuse in protected calls",
                  "if (pm.response.code === 200) {",
                  "    try {",
                  "        const data = pm.response.json();",
                  "        if (data.token) {",
                  "            pm.collectionVariables.set(\"token\", data.token);",
                  "        }",
                  "    } catch (e) {",
                  "        console.log(\"Unable to parse login response\", e);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /api/v1/auth/register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"demo_user\",\n    \"password\": \"DemoPass1\",\n    \"email\": \"demo@example.com\",\n    \"phone\": \"0123456789\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/v1/auth/register",
              "protocol": "{{scheme}}",
              "host": [
                "{{host}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "v1",
                "auth",
                "register"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 201 or 409\", function () {",
                  "    pm.expect([201, 409]).to.include(pm.response.code);",
                  "});",
                  "",
                  "pm.test(\"Response body present\", function () {",
                  "    pm.expect(pm.response.text()).to.not.be.empty;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /api/v1/auth/profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{scheme}}://{{host}}:{{port}}/api/v1/auth/profile",
              "protocol": "{{scheme}}",
              "host": [
                "{{host}}"
              ],
              "port": "{{port}}",
              "path": [
                "api",
                "v1",
                "auth",
                "profile"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200 (requires valid JWT)\", function () {",
                  "    pm.expect(pm.response.code).to.eql(200);",
                  "});",
                  "",
                  "pm.test(\"Contains username in response\", function () {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data).to.have.property(\"username\");",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "scheme",
      "value": "http"
    },
    {
      "key": "host",
      "value": "127.0.0.1"
    },
    {
      "key": "port",
      "value": "8080"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
